  <div class="stats" id="stats">
    üßç‚Äç‚ôÇÔ∏è Usuarios en l√≠nea: <span id="online">1</span><br>
    üì® Mensajes enviados: <span id="sent">0</span>
  </div>

  <h1>ü§ç Amigo An√≥nimo</h1>
  <p style="text-align: center;">Escribe lo que sientes. Ser√°s escuchado.</p>

  <textarea id="userMessage" placeholder="Escribe aqu√≠ lo que quieras desahogar..."></textarea>
  <button onclick="enviarMensaje()">Enviar</button>

  <div class="message-box" id="iaResponse" style="display:none;">
    <strong>üí¨ Consejo de tu IA amiga:</strong>
    <p id="responseText"></p>
  </div>

  <div id="ai-bubble">¬øNecesitas un consejo? Estoy aqu√≠ üíô</div>

  <script>
    const API_KEY = "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";

    let mensajesEnviados = 0;
    let usuariosOnline = Math.floor(Math.random() * 10) + 1;
    document.getElementById('online').textContent = usuariosOnline;

    async function enviarMensaje() {
      const input = document.getElementById('userMessage');
      const msg = input.value.trim();
      if (msg === "") {
        alert("Escribe algo primero.");
        return;
      }

      mensajesEnviados++;
      document.getElementById('sent').textContent = mensajesEnviados;

      document.getElementById('responseText').textContent = "Pensando...";
      document.getElementById('iaResponse').style.display = 'block';
      document.getElementById('ai-bubble').style.display = 'none';

      try {
        const res = await fetch("https://openrouter.ai/api/v1/chat/completions", {
          method: "POST",
          headers: {
            "Authorization": `Bearer ${API_KEY}`,
            "Content-Type": "application/json"
          },
          body: JSON.stringify({
            model: "openai/gpt-3.5-turbo",
            messages: [{ role: "user", content: msg }]
          })
        });

        const data = await res.json();
        const respuesta = data.choices?.[0]?.message?.content || "No pude responder ahora.";

        document.getElementById('responseText').textContent = respuesta;
      } catch (error) {
        console.error(error);
        document.getElementById('responseText').textContent = "Error al conectar con la IA.";
      }

      input.value = '';
    }

    // Mostrar el globito IA autom√°ticamente
    setTimeout(() => {
      document.getElementById('ai-bubble').style.display = 'block';
    }, 4000);

    // Al hacer clic en el globito, preguntar algo
    document.getElementById('ai-bubble').addEventListener('click', async () => {
      const pregunta = prompt("¬øEn qu√© puedo ayudarte?");
      if (!pregunta) return;

      mensajesEnviados++;
      document.getElementById('sent').textContent = mensajesEnviados;

      document.getElementById('responseText').textContent = "Pensando...";
      document.getElementById('iaResponse').style.display = 'block';

      try {
        const res = await fetch("https://openrouter.ai/api/v1/chat/completions", {
          method: "POST",
          headers: {
            "Authorization": `Bearer ${API_KEY}`,
            "Content-Type": "application/json"
          },
          body: JSON.stringify({
            model: "openai/gpt-3.5-turbo",
            messages: [{ role: "user", content: pregunta }]
          })
        });

        const data = await res.json();
        const respuesta = data.choices?.[0]?.message?.content || "No pude responder ahora.";

        document.getElementById('responseText').textContent = respuesta;
      } catch (err) {
        console.error(err);
        document.getElementById('responseText').textContent = "Error al conectar con la IA.";
      }
    });
  </script>
